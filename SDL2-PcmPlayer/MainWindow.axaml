<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PcmPlayer.MainWindow"
        Title="PCM Player" Width="400" Height="300">
  <StackPanel Margin="10">
    <TextBlock Text="选择 PCM 文件:"/>
    <StackPanel Orientation="Horizontal">
      <TextBox x:Name="FilePathTextBox" Width="250"/>
      <Button x:Name="BrowseButton" Content="浏览" Margin="5,0,0,0"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
      <TextBlock Text="采样率:" VerticalAlignment="Center"/>
      <NumericUpDown x:Name="SampleRateBox" Minimum="8000" Maximum="192000" Value="44100" Width="100" Margin="5,0,0,0"/>
      <TextBlock Text="声道数:" VerticalAlignment="Center" Margin="10,0,0,0"/>
      <NumericUpDown x:Name="ChannelsBox" Minimum="1" Maximum="2" Value="2" Width="50" Margin="5,0,0,0"/>
    </StackPanel>

    <CheckBox x:Name="LoopCheckBox" Content="循环播放" Margin="0,10,0,0"/>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
      <Button x:Name="StartButton" Content="开始" Width="60"/>
      <Button x:Name="PauseButton" Content="暂停" Width="60" Margin="5,0,0,0"/>
      <Button x:Name="ResumeButton" Content="恢复" Width="60" Margin="5,0,0,0"/>
      <Button x:Name="StopButton" Content="停止" Width="60" Margin="5,0,0,0"/>
    </StackPanel>
  </StackPanel>
</Window>